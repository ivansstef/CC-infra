version: '3.8'

services:
  cinema-club:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: {{ app_name }}
    ports:
      - "{{ app_port }}:80"
    restart: unless-stopped
    volumes:
      - ./:/app
    restart: unless-stopped
    networks:
      - cinema-network

networks:
  cinema-network:
    driver: bridge
